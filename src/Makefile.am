  lib_LTLIBRARIES              += libtimpi_oprof.la
  libtimpi_oprof_la_SOURCES  = $(timpi_SOURCES)
  libtimpi_oprof_la_CPPFLAGS = $(CPPFLAGS_OPROF) $(AM_CPPFLAGS)
